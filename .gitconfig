[user]
	email = emailhere
	name = arnaucube
[diff]
	tool = --get
[core]
	pager = delta
[delta]
	line-numbers = true
	side-by-side = true
	plus-color = "#012800"
	minus-color = "#340001"
	syntax-theme = Monokai Extended
[interactive]
	diffFilter = delta --color-only
[alias]
	wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
	    
